<?xml version="1.0"?>
<config>
    <modules>
        <Tritac_ChannelEngine>
            <version>0.2.0.0</version>
        </Tritac_ChannelEngine>
    </modules>

    <global>
        <helpers>
            <channelengine>
                <class>Tritac_ChannelEngine_Helper</class>
            </channelengine>
        </helpers>
        <models>
            <channelengine>
                <class>Tritac_ChannelEngine_Model</class>
            </channelengine>
        </models>
        <resources>
            <channelengine_setup>
                <setup>
                    <module>Tritac_ChannelEngine</module>
                    <class>Tritac_ChannelEngine_Model_Resource_Setup</class>
                </setup>
            </channelengine_setup>
        </resources>
        <fieldsets>
            <sales_convert_quote_item>
                <channelengine_order_line_id>
                    <to_order_item>*</to_order_item>
                </channelengine_order_line_id>
            </sales_convert_quote_item>
            <sales_convert_order_item>
                <channelengine_order_line_id>
                    <to_quote_item>*</to_quote_item>
                </channelengine_order_line_id>
            </sales_convert_order_item>
        </fieldsets>
    </global>

    <default>
        <payment>
            <channelengine>
                <active>1</active>
                <model>channelengine/payment_method_channelengine</model>
                <title>Paid with ChannelEngine</title>
                <allowspecific>0</allowspecific>
                <order_status>pending</order_status>
            </channelengine>
        </payment>
        <carriers>
            <channelengine>
                <active>1</active>
                <sallowspecific>0</sallowspecific>
                <model>channelengine/carrier_channelengine</model>
                <name>ChannelEngine</name>
                <title>shipping already paid</title>
                <price>0</price>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
            </channelengine>
        </carriers>
    </default>

    <frontend>
        <routers>
            <channelengine>
                <use>standart</use>
                <args>
                    <module>Tritac_ChannelEngine</module>
                    <frontName>channelengine</frontName>
                </args>
            </channelengine>
        </routers>
    </frontend>

    <adminhtml>
        <events>
            <sales_order_shipment_save_after>
                <observers>
                    <shipmentsave>
                        <type>singleton</type>
                        <class>channelengine/observer</class>
                        <method>saveShipment</method>
                    </shipmentsave>
                </observers>
            </sales_order_shipment_save_after>
        </events>
    </adminhtml>

    <admin>
        <routers>
            <channelengine>
                <use>admin</use>
                <args>
                    <module>Tritac_ChannelEngine</module>
                    <frontName>channelengine</frontName>
                </args>
            </channelengine>
        </routers>
    </admin>

    <crontab>
        <jobs>
            <channelengine>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>channelengine/observer::fetchNewOrders</model>
                </run>
            </channelengine>
        </jobs>
    </crontab>
</config>
